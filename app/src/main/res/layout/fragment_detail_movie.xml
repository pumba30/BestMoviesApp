<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView_detail_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pundroid.bestmoviesapp.fragments.DetailMovieActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:weightSum="1">


             <ImageView
                android:id="@+id/image_view_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/backdrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="12dp"
            android:background="@color/light_green"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="4dp">

                <ImageView
                    android:id="@+id/imageView_poster_w154"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/poster_w154" />

                <RatingBar
                    android:id="@+id/ratingBarPopularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"

                android:layout_weight="6.50">
                <TextView
                    android:id="@+id/tv_original_title_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:textColor="@color/light_gray"
                    android:text="@string/original_title_header"/>
                <TextView
                    android:id="@+id/tv_original_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/original_title"/>


                <TextView
                    android:id="@+id/tv_genre_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="4dp"
                    android:textColor="@color/light_gray"
                    android:text="@string/genre_header"/>
                <TextView
                    android:id="@+id/tv_genre_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/genre_title"/>

                <TextView
                    android:id="@+id/tv_releasedate_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="4dp"
                    android:textColor="@color/light_gray"
                    android:text="@string/releasedate_header"/>
                <TextView
                    android:id="@+id/tv_release_date_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/release_date_title"/>

                <TextView
                    android:id="@+id/tv_vote_average_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="4dp"
                    android:textColor="@color/light_gray"
                    android:text="@string/vote_average__header"/>
                <TextView
                    android:id="@+id/tv_vote_average_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/vote_average_title"/>


                <TextView
                    android:id="@+id/tv_vote_count_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="4dp"
                    android:textColor="@color/light_gray"
                    android:text="@string/vote_count__header"/>
                <TextView
                    android:id="@+id/tv_vote_count_header_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingLeft="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/vote_count_title"
                    android:elegantTextHeight="true"
                    android:singleLine="false" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@color/light_green"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tag_line_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="4dp"
                android:textColor="@color/light_gray"
                android:text="@string/tag_line_header"/>
            <TextView
                android:id="@+id/tv_tag_line_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/tag_line_title"/>


            <TextView
                android:id="@+id/tv_tag_overview_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="4dp"
                android:textColor="@color/light_gray"
                android:text="@string/overview_header"/>
            <TextView
                android:id="@+id/tv_overview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/overview_title"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/light_green"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_production_companies_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="4dp"
                android:textColor="@color/light_gray"
                android:text="@string/production_companies_header"/>
            <TextView
                android:id="@+id/tv_production_companies_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/production_companies_description"/>


            <TextView
                android:id="@+id/tv_production_countries_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="4dp"
                android:textColor="@color/light_gray"
                android:text="@string/production_countries_header"/>
            <TextView
                android:id="@+id/tv_production_countries_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/production_countries_description"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/light_green"
            android:shrinkColumns="true">

            <TableRow android:weightSum="3">
                <TextView
                    android:text="@string/budget"
                    android:padding="4dp"
                    android:layout_weight="1"/>
                <TextView
                    android:text="@string/runtime"
                    android:padding="4dp"
                    android:layout_weight="1"/>
                <TextView
                    android:text="@string/revenue"
                    android:padding="4dp"
                    android:layout_weight="1"/>

            </TableRow>
            <TableRow android:weightSum="3">
                <TextView
                    android:id="@+id/cell_budget"
                    android:text="@string/budget"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/cell_runtime"
                    android:textStyle="bold"
                    android:text="@string/runtime"
                    android:padding="4dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/cell_revenue"
                    android:textStyle="bold"
                    android:text="@string/revenue"
                    android:padding="4dp"
                    android:layout_weight="1"/>

            </TableRow>

        </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:background="@color/light_green"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_homepage_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="4dp"
            android:textColor="@color/light_gray"
            android:text="@string/homepage_header"/>
        <TextView
            android:id="@+id/tv_homepage_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="@string/homepage_description"
            android:autoLink="web"
            android:clickable="true"/>
    </LinearLayout>

    </LinearLayout>


</ScrollView>



